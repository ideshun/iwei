.q-image-wrap{
 
  width: 150rpx;
 
  height: 150rpx;
 
  border: 3px solid #f0f0f0;
 
  float: left;
 
  margin-right: 20rpx;
 
  position: relative;
 
  overflow: hidden;
 
}
 
.q-image-remover{
 
  width: 100rpx;
 
  height: 100rpx;
 
  border-radius: 100%;
 
  background: #2e82ff;
 
  position: absolute;
 
  top:-50rpx;
 
  right:-50rpx;
 
 
 
}
 
.q-image-remover icon{
 
  position: absolute;
 
  left:12rpx;
 
  bottom:12rpx;
 
  color:#fff;
 
}
 
 
 
